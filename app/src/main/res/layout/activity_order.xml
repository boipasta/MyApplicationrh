<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".Order">

    <ImageView
        android:id="@+id/iv_default"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:adjustViewBounds="true"
        android:src="@drawable/b2" />

    <TextView
        android:id="@+id/tv_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Nama FILM"
        android:textColor="#fff"
        android:textSize="30sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@drawable/custom_edittext"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="26dp">

            <TextView
                android:id="@+id/bioskop"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Pilih Bioskop"
                android:textColor="@color/ehe"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtbioskop"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:onClick="bioskop"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHighlight="@color/ehe" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Pilih Jam"
                android:textColor="@color/ehe"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtjamtayang"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:inputType="text"
                android:onClick="jamtayang"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHighlight="@color/ehe" />

            <TextView
                android:id="@+id/noText"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="nokursi"
                android:textColor="@color/ehe"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/txtkursi"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/custom_edittext"
                android:ems="10"
                android:focusableInTouchMode="false"
                android:inputType="number"
                android:onClick="nokursi"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textColorHighlight="@color/ehe" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnsimpan"
        android:layout_width="291dp"
        android:layout_height="43dp"
        android:textColor="#fff"
        android:layout_marginTop="6dp"
        android:background="@drawable/rounded_corner"
        android:text="Order"
        android:onClick="simpann"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="189dp"
        android:layout_margin="30dp"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/Hasilorder"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Hasil Order:"
                android:textColor="@color/ehe"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/hasil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/btnsimpan"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/hasil2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/hasil"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/hasil3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/hasil2"
                tools:layout_editor_absoluteX="0dp" />

            <TextView
                android:id="@+id/hasil4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/hasil3"
                tools:layout_editor_absoluteX="0dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>


